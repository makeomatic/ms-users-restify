{
  "name": "ms-users-restify",
  "version": "0.3.2",
  "description": "Core of the microservice for handling users",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "babel ./src -d ./lib --optional es7.objectRestSpread,es7.classProperties,es7.decorators",
    "pretest": "npm rebuild",
    "test": "BLUEBIRD_DEBUG=1 ./node_modules/.bin/mocha --require ./test/babelhook.js --bail -R xunit > test-report-$(node -v).xml",
    "test-local": "NODE_ENV=development ./node_modules/.bin/mocha --require ./test/babelhook.js",
    "doc": "apidoc -i ./src -o ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-users-restify.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-users-restify/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-users-restify#readme",
  "dependencies": {
    "bluebird": "^3.0.5",
    "common-errors": "^0.5.3",
    "countryjs": "^1.4.5",
    "debug": "^2.2.0",
    "glob": "^6.0.1",
    "mm-lodash": "^1.2.5",
    "ms-amqp-validation": "^0.4.1",
    "ms-users-schemas": "^0.1.0",
    "proxy-addr": "^1.0.8"
  },
  "devDependencies": {
    "babel-core": "^5.8.33",
    "babel-eslint": "^4.1.4",
    "bunyan": "^1.5.1",
    "chai": "^3.4.1",
    "eslint": "^1.8.0",
    "eslint-config-airbnb": "^1.0.0",
    "eslint-plugin-mocha": "^1.0.0",
    "eslint-plugin-react": "^3.8.0",
    "mocha": "^2.3.3",
    "restify": "^4.0.3",
    "server-destroy": "^1.0.1",
    "sinon": "^1.17.2",
    "restify-formatter-jsonapi": "^0.1.4"
  },
  "apidoc": {
    "version": "1.0.0",
    "name": "Users family documentation",
    "description": "Documentation for user-based actions",
    "url": "https://api-users.sandbox.matic.ninja/api/users"
  }
}
