{
  "id": "register",
  "type": "object",
  "additionalProperties": false,
  "required": [ "data" ],
  "properties": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "type", "id", "attributes" ],
      "properties": {
        "type": {
          "type": "string",
          "constant": "user"
        },
        "id": {
          "$ref": "users-common#/definitions/username"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "required": ["alias", "firstName", "lastName"],
          "properties": {
            "password": {
              "allOf": [
                {
                  "$ref": "users-common#/definitions/password"
                },
                {
                  "constant": {
                    "$data": "1/passwordRepeat"
                  }
                }
              ]
            },
            "passwordRepeat": {
              "$ref": "users-common#/definitions/password"
            },
            "alias": {
              "type": "string",
              "minLength": 3,
              "maxLength": 15
            },
            "firstName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "lastName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "gender": {
              "$ref": "users-common#/definitions/gender"
            },
            "birthday": {
              "$ref": "users-common#/definitions/birthday"
            },
            "addressLine1": {
              "$ref": "users-common#/definitions/str-50"
            },
            "addressLine2": {
              "$ref": "users-common#/definitions/str-50"
            },
            "zipCode": {
              "$ref": "users-common#/definitions/str-50"
            },
            "state": {
              "$ref": "users-common#/definitions/state"
            },
            "city": {
              "$ref": "users-common#/definitions/str-150"
            },
            "country": {
              "$ref": "users-common#/definitions/country"
            },
            "phone": {
              "$ref": "users-common#/definitions/phone"
            },
            "website": {
              "type": "string",
              "format": "uri"
            },
            "org": {
              "type": "boolean",
              "default": false
            },
            "companyName": {
              "$ref": "users-common#/definitions/str-150"
            },
            "longDescription": {
              "$ref": "users-common#/definitions/str-250"
            },
            "shortDescription": {
              "$ref": "users-common#/definitions/str-155"
            },
            "additionalInformation": {
              "$ref": "users-common#/definitions/str-250"
            }
          },
          "switch": [{
            "if": { "properties": { "org": { "constant": true } } },
            "then": {
              "required": [
                "companyName",
                "longDescription",
                "shortDescription",
                "addressLine1",
                "zipCode",
                "city",
                "state",
                "country",
                "phone"
              ]
            }
          }]
        }
      }
    }
  }
}
