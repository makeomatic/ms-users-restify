{
  "id": "update",
  "type": "object",
  "additionalProperties": false,
  "required": [ "data" ],
  "properties": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "anyOf": [
        {
          "required": [ "type", "attributes" ]
        },
        {
          "required": [ "type", "remove" ]
        },
        {
          "required": [ "type", "incr" ]
        }
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "user" ]
        },
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "minProperties": 1,
          "properties": {
            "firstName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "lastName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "gender": {
              "$ref": "users-common#/definitions/gender"
            },
            "birthday": {
              "$ref": "users-common#/definitions/birthday"
            },
            "addressLine1": {
              "$ref": "users-common#/definitions/str-50"
            },
            "addressLine2": {
              "$ref": "users-common#/definitions/str-50"
            },
            "zipCode": {
              "$ref": "users-common#/definitions/str-15"
            },
            "state": {
              "$ref": "users-common#/definitions/state"
            },
            "city": {
              "$ref": "users-common#/definitions/str-150"
            },
            "country": {
              "$ref": "users-common#/definitions/country"
            },
            "phone": {
              "$ref": "users-common#/definitions/phone"
            },
            "website": {
              "$ref": "users-common#/definitions/str-50"
            },
            "companyName": {
              "$ref": "users-common#/definitions/str-150"
            },
            "longDescription": {
              "$ref": "users-common#/definitions/str-250"
            },
            "shortDescription": {
              "$ref": "users-common#/definitions/str-155"
            },
            "additionalInformation": {
              "$ref": "users-common#/definitions/str-250"
            },
            "plan": {
              "$ref": "users-common#/definitions/str-50"
            },
            "modelPrice": {
              "type": "number",
              "minimum": 0,
              "maximum": 10000
            }
          }
        },
        "remove": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "companyName",
              "gender",
              "birthday",
              "phone",
              "website",
              "shortDescription",
              "longDescription",
              "additionalInformation",
              "addressLine1",
              "addressLine2",
              "city",
              "state",
              "zipCode",
              "country"
            ]
          }
        },
        "incr": {
          "additionalProperties": false,
          "minProperties": 1,
          "type": "object",
          "properties": {
            "models": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
