{
  "id": "update",
  "type": "object",
  "additionalProperties": false,
  "required": [ "data" ],
  "properties": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "anyOf": [
        {
          "required": [ "type", "attributes" ]
        },
        {
          "required": [ "type", "remove" ]
        }
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "user" ]
        },
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "minProperties": 1,
          "properties": {
            "firstName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "lastName": {
              "$ref": "users-common#/definitions/str-50"
            },
            "companyName": {
              "$ref": "users-common#/definitions/str-150"
            },
            "country": {
              "$ref": "users-common#/definitions/country"
            },
            "city": {
              "$ref": "users-common#/definitions/str-150"
            },
            "gender": {
              "$ref": "users-common#/definitions/gender"
            },
            "birthday": {
              "$ref": "users-common#/definitions/birthday"
            },
            "phone": {
              "$ref": "users-common#/definitions/phone"
            }
          }
        },
        "remove": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [ "companyName", "country", "city", "gender", "birthday", "phone" ]
          }
        }
      }
    }
  }
}